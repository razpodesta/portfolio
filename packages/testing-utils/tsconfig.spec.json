{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["jest", "node", "react", "react-dom", "@testing-library/jest-dom"]
  },
  "include": [
    "jest.config.ts",
    "jest.setup.ts", // <-- NUEVO
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../tests/packages/testing-utils/**/*.ts",
    "../../tests/packages/testing-utils/**/*.tsx",
    "../../tests/packages/testing-utils/**/*.spec.ts",
    "../../tests/packages/testing-utils/**/*.spec.tsx"
  ]
}
