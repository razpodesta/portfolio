{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // CRÍTICO: Apunta a la raíz del monorepo para que los paths '@metashark-cms/*' funcionen
    "baseUrl": "..",

    // Configuración para Tests de UI
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,

    // Tipos globales necesarios para los tests
    "types": ["node", "jest", "@testing-library/jest-dom", "react", "react-dom"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../jest.config.ts",
    "../jest.preset.js"
  ]
}
