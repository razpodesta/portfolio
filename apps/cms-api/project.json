{
  "name": "cms-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cms-api/src",
  "projectType": "application",
  "tags": ["scope:api", "type:backend"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/cms-api",
        "main": "apps/cms-api/src/index.ts",
        "tsConfig": "apps/cms-api/tsconfig.json",
        "assets": [
          "apps/cms-api/src/assets",
          {
            "glob": "**/*.json",
            "input": "apps/cms-api/src/data/i18n",
            "output": "./src/data/i18n"
          },
          {
            "glob": "config.json",
            "input": "apps/cms-api/config",
            "output": "./config"
          }
        ]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "cms-api:build"
      }
    },
    "serve:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node-dev --project apps/cms-api/tsconfig.json apps/cms-api/src/index.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
